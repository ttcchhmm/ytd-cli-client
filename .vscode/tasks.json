{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create build directory",
            "type": "shell",
            "command": "mkdir -p build"
        },
        {
            "label": "Run qmake",
            "type": "shell",
            "command": "qmake",
            "args": ["-makefile", "../ytd-cli-client.pro"],
            "options": {
                "cwd": "build"
            }
        },
        {
            "label": "Run make",
            "type": "shell",
            "command": "make -j8",
            "options": {
                "cwd": "build"
            }
        },
        {
            "label": "Run make clean",
            "type": "shell",
            "command": "make clean",
            "options": {
                "cwd": "build"
            }
        },
        {
            "label": "Build",
            "dependsOn" : [
                "Create build directory",
                "Run qmake",
                "Run make"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean build",
            "dependsOn" : [
                "Run make clean",
                "Create build directory",
                "Run qmake",
                "Run make"
            ],
            "dependsOrder": "sequence"
        }
    ]
}